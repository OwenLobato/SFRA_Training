<isdecorate template="common/layout/page">
  <isscript>
    var assets = require('*/cartridge/scripts/assets.js');
    assets.addCss('css/testStyles.css');
  </isscript>

  <div class="special-section">
    <h2 class="section-title">${Resource.msg('special.section.title', 'special', null)}</h2>
    <div class="product-container">

      <div class="product">
        <img src="https://static-cse.canva.com/blob/984340/15Secretosfotosdeproducto1.jpg"
          alt="${Resource.msg('special.section.productA', 'special', null)}" />
        <h3>${Resource.msg('special.section.productA', 'special', null)}</h3>
        <p>${Resource.msg('special.section.priceA', 'special', null)}</p>
      </div>
      <div class="product">
        <img src="https://static-cse.canva.com/blob/984340/15Secretosfotosdeproducto1.jpg"
          alt="${Resource.msg('special.section.productB', 'special', null)}" />
        <h3>${Resource.msg('special.section.productB', 'special', null)}</h3>
        <p>${Resource.msg('special.section.priceB', 'special', null)}</p>
      </div>
      <div class="product">
        <img src="https://static-cse.canva.com/blob/984340/15Secretosfotosdeproducto1.jpg"
          alt="${Resource.msg('special.section.productC', 'special', null)}" />
        <h3>${Resource.msg('special.section.productC', 'special', null)}</h3>
        <p>${Resource.msg('special.section.priceC', 'special', null)}</p>
      </div>
      <div class="product">
        <img src="https://static-cse.canva.com/blob/984340/15Secretosfotosdeproducto1.jpg"
          alt="${Resource.msg('special.section.productD', 'special', null)}" />
        <h3>${Resource.msg('special.section.productD', 'special', null)}</h3>
        <p>${Resource.msg('special.section.priceD', 'special', null)}</p>
      </div>

    </div>
  </div>

  <div class="testContainer">
    <ul>
      <li><a href="$url('Page-Options', 'routeParam', 'section-a')$"
          title="Go to Section A">${Resource.msg("special.sectionA", "special", null)}</a></li>
      <li><a href="$url('Page-Options', 'routeParam', 'section-b')$"
          title="Go to Section B">${Resource.msg("special.sectionB", "special", null)}</a></li>
      <li><a href="$url('Page-Options', 'routeParam', 'section-c')$"
          title="Go to Section C">${Resource.msg("special.sectionC", "special", null)}</a></li>
    </ul>
  </div>

  <div class="d-flex justify-content-center align-items-center">
    <a class="continue-shopping-btn" href="${URLUtils.url('Home-Show')}"
      title="${Resource.msg('link.continue.shopping', 'cart', null)}">
      ${Resource.msg('link.continue.shopping', 'cart', null)}
    </a>
  </div>


</isdecorate>